<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/ic_background">
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment"
        android:layout_below="@+id/imgBack"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_22dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/dimen_15dp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_below="@+id/txtCreateAccount"
            android:background="@drawable/curve"
            >

            <TextView
                android:id="@+id/txtNodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_12sp"
                android:text="No record found"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:textColor="#008000"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                tools:ignore="RtlHardcoded">
            </TextView>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/rlCard"
              android:layout_marginTop="@dimen/dimen_20dp"
              android:layout_marginLeft="@dimen/dimen_15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlCard"
                android:layout_marginLeft="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_50dp"
                android:background="@drawable/curve"
                >
                <TextView
                    android:id="@+id/edtAddCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newCard"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:layout_marginLeft="@dimen/dimen_25sp"
                    android:layout_marginRight="@dimen/dimen_25sp"
                    android:padding="@dimen/dimen_15dp"
                    android:background="@drawable/rounded_filled_border"
                    android:layout_below="@+id/txtSignUp"
                    />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/dimen_80dp"
                    android:layout_marginLeft="@dimen/dimen_80dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/rounded_border_button"
                    android:text="@string/done"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/splashColor"
                    android:textSize="@dimen/dimen_20sp"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>
</RelativeLayout>