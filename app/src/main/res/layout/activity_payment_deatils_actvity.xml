<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/ic_background">
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment"
        android:layout_below="@+id/imgBack"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_22dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/dimen_15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_below="@+id/txtCreateAccount"
        android:background="@android:color/white"
        >
        <RelativeLayout
            android:id="@+id/rlYouSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            >

            <TextView
                android:id="@+id/txtyouSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/youSend"
                />

            <TextView
                android:id="@+id/amountYousend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="000 EUR"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDonation"
            android:layout_below="@+id/rlYouSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            >

            <TextView
                android:id="@+id/txtDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/donation"
                />

            <TextView
                android:id="@+id/amountDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="0 EUR"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFreefess"
            android:layout_below="@+id/rlDonation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            >

            <TextView
                android:id="@+id/txtFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/freeFess"
                />

            <TextView
                android:id="@+id/amountFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="0 EUR"
                tools:ignore="RtlCompat" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlFreefess"
            android:layout_marginTop="@dimen/dimen_10dp"
            >

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/black"
                android:text="@string/totalAmount"
                />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/black"
                android:text="00 EUR"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlTotal"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/rlConvertYouSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/dimen_10dp"
            >

            <TextView
                android:id="@+id/txtYouSendAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/totalAmount"
                />

            <TextView
                android:id="@+id/convertAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="00 EUR"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlConvertYouSend"
            android:layout_marginTop="@dimen/dimen_10dp"
            >

            <TextView
                android:id="@+id/txtReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/receive"
                />

            <TextView
                android:id="@+id/toatlaReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_17sp"
                android:textColor="@android:color/darker_gray"
                android:text="00 EUR"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <Button
            android:id="@+id/btnpay"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_80dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/rounded_border_button"
            android:text="@string/pay"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:textAllCaps="false"
            android:textColor="@color/splashColor"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
